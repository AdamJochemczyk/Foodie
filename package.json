{
  "name": "foodie",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "lint-prepush"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint '*/**/*.{ts,tsx}' --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml,scss,css}": [
      "prettier --write"
    ]
  },
  "lint-prepush": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix .",
      "npm run build"
    ]
  },
  "dependencies": {
    "@supabase/supabase-js": "^1.29.4",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "filepond": "^4.30.3",
    "formik": "^2.2.9",
    "next": "12.0.8",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "react-query": "^3.34.14",
    "react-select": "^5.2.2",
    "react-toastify": "^8.1.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.0.0",
    "@types/node": "17.0.10",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "commitlint": "^16.1.0",
    "eslint": "^8.7.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.11.0",
    "husky": "^7.0.0",
    "lint-prepush": "^2.2.0",
    "lint-staged": "^12.3.0",
    "prettier": "^2.5.1",
    "typescript": "4.5.5"
  }
}
